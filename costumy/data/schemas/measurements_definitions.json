{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Json Schema for measurments definition. A measurement defition is related to a specific mesh",

    "type":"object",
    "properties": {
        "measures":{"type":"object", "description": "Defines the measurements available for a specific mesh and how to measure said measurement.",
            "patternProperties":{ 
                "^.*$":
                {
                    "type":"object",
                    "description": "measurement",
                    "properties": {"method":{"type":"string","description": "method used to measure the mesh"}},
                    "$ref":"./measurements_methods.json",
                    "required":["method","vertices"],
                    "default":{"method":""}
                }
            }
        },
        "references":{"type":"object", "description": "Defines the measurements available for a specific mesh and how to measure said measurement.",
            "patternProperties":{ 
                "^.*$":
                {
                    "type":"object",
                    "description": "measurement",
                    "properties": {"method":{"type":"string","description": "method used to measure the mesh"}},
                    "$ref":"./measurements_methods.json",
                    "required":["method"],
                    "default":{"method":""}
                }
            }
        }
    }
}